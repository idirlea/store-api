{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "productDescription": {
      "type": "richtext",
      "required": true
    },
    "rating": {
      "type": "decimal"
    },
    "votes": {
      "type": "integer"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category"
    }
  }
}
